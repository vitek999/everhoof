.modal
	position fixed
	top 0
	right 0
	left 0
	bottom 0
	z-index 900
	display flex
	justify-content center
	align-items center
	background rgba(0, 0, 0, .5)

	&__icon
		max-width 100%
		max-height 100%

	&__header
		display flex
		align-items center
		width 100%
		margin 0 0 16px
		padding 0 0 8px
		border-bottom 1px solid rgba(255, 255, 255, .07)

		&:last-child
			margin-bottom 0

	&__title
		overflow hidden
		flex-grow 1
		flex-shrink 1
		margin 0 12px 0 0
		color var(--primary-text)
		font-size 19px
		font-weight 600
		white-space nowrap
		text-overflow ellipsis

		&:last-child
			margin-right 0

	&__close
		flex-grow 0
		flex-shrink 0
		width 32px
		height 32px
		margin-right 12px
		padding 4px
		fill currentColor
		color var(--primary-text)
		font-size 16px
		font-weight 600
		cursor pointer
		border-radius 50%

		&:hover
			background rgba(255, 255, 255, .07)

		&:last-child
			margin-right 0
