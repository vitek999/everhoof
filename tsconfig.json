{
  "compilerOptions": {
    "target": "es2018",
    "module": "esnext",
    "moduleResolution": "node",
    "lib": ["esnext", "esnext.asynciterable", "dom"],
    "esModuleInterop": true,
    "allowJs": true,
    "sourceMap": true,
    "strict": true,
    "noEmit": true,
    "experimentalDecorators": true,
    "baseUrl": ".",
    "paths": {
      "~/*": ["./*"],
      "@/*": ["./*"]
    },
    "types": [
      "types/vuex-accessor",
      "@types/node",
      "@nuxt/types",
      "@nuxtjs/apollo",
      "vue-apollo",
      "vue-cli-plugin-apollo/types",
      "cookie-universal-nuxt",
      "nuxt-i18n"
    ]
  },
  "exclude": ["node_modules", ".nuxt", "dist"]
}
