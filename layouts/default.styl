*,
*:before,
*:after
	box-sizing border-box
	margin 0

#__nuxt,
#__layout
	height 100%

.icon
	max-width 100%
	max-height 100%

.page
	overflow hidden auto
	height 100%
	min-height 100%

	&__wrapper
		display flex
		flex-direction column
		height 100%

	&__body
		overflow hidden auto
		height 100%
		min-height 100%
		color var(--primary-text)
		font-family 'Open Sans', sans-serif
		font-size 14px
		line-height 1.5
		background #0f1014 url('/bg.svg') no-repeat fixed 50% / cover

		&_overflow
			&_hidden
				overflow hidden

	&__header
		position fixed
		top 0
		right 0
		left 0
		z-index 99

	&__main
		overflow hidden
		flex-grow 1
		height calc(100vh - (72px + 16px))
		clearfix()

	&__content
		overflow hidden auto
		width 100%
		height 100%
		max-height 100%
		padding 16px 16px 0
		defaultTransition()
